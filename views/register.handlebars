<form method="post" action="/users/register">
  <div id="root">
    <div class="ca-container">
      <img src="../img/fixbit-logo.svg" class="ca-logo" alt="logo" />
      <div class="ca-form">
        <div class="ca-form-header">Name</div>
        <input id="username" class="ca-form-input" type="text" name="name"/>
        <div class="ca-form-header">Username</div>
        <input id="username" class="ca-form-input" type="text" name="username"/>
        <div class="ca-form-header">Email</div>
        <input id="username" class="ca-form-input" type="email" name="email"/>
        <div class="ca-form-header">Password</div>
        <input id="password" class="ca-form-input" type="password" name="password"/>
        <div class="ca-form-header">Confirm Password</div>
        <input id="password" class="ca-form-input" type="password" name="password2"/>
        <input id="submit" class="ca-form-submit" type="submit" value="Submit"/>
      </div>
    </div>
  </div>
</form>